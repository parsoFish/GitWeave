{
  "name": "gitweave",
  "version": "0.1.0",
  "private": true,
  "description": "GitWeave platform tests and (later) services",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:api": "cross-env RUN_API_TESTS=1 vitest run tests/auth tests/repos",
  "test:e2e": "cross-env RUN_E2E_HTTP=1 RUN_E2E_SSH=1 vitest run tests/e2e",
  "test:api:local": "node ./scripts/test-api-with-app.mjs",
  "build:app": "npm --prefix app run build",
  "start:app": "npm --prefix app run start",
  "dev:docker": "docker compose -f docker-compose.local.yml up --build",
  "down:docker": "docker compose -f docker-compose.local.yml down"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "cross-env": "^7.0.3",
    "vitest": "^2.0.5"
  },
  "type": "module"
}
